{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Dralee File Replace Rule",
  "scopeName": "source.drp",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#service-name"
    },
    {
      "include": "#statements"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.configenum",
          "match": "^\\s*#.*$"
        }
      ]
    },
    "service-name": {
      "patterns": [
        {
          "name": "meta.service-name.configenum",
          "match": "^\\[([^\\]]+)\\]",
          "captures": {
            "0": {
              "name": "entity.name.section.configenum"
            },
            "1": {
              "name": "entity.name.type.service.configenum"
            }
          }
        }
      ]
    },
    "statements": {
      "patterns": [
        {
          "comment": "优先级1：最具体的模式放在最前面 - 双向赋值 <===>",
          "include": "#bidirectional-assignment"
        },
        {
          "comment": "优先级2：双等号加箭头 ==>",
          "include": "#double-equal-arrow"
        },
        {
          "comment": "优先级3：双等号 ==",
          "include": "#double-equal"
        },
        {
          "comment": "优先级4：单等号赋值（最后匹配，因为最宽泛）",
          "include": "#single-equal"
        }
      ]
    },
    "bidirectional-assignment": {
      "patterns": [
        {
          "name": "meta.bidirectional-assignment.priority",
          "match": "^(.*?)\\s*(<==>)(.*?)$",
          "captures": {
            "1": {
              "name": "string.quoted.double.priority"
            },
            "2": {
              "name": "keyword.operator.bidirectional.priority"
            },
            "3": {
              "name": "string.quoted.double.priority"
            }
          }
        }
      ]
    },
    "double-equal-arrow": {
      "patterns": [
        {
          "name": "meta.double-equal-arrow.priority",
          "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_-]*)\\s*(==)\\s*([^=]+)\\s*(=>\\$)\\s*$",
          "captures": {
            "1": {
              "name": "variable.other.name.priority"
            },
            "2": {
              "name": "keyword.operator.double-equal.priority"
            },
            "3": {
              "name": "string.unquoted.path.priority"
            },
            "4": {
              "name": "keyword.operator.arrow.priority"
            }
          }
        }
      ]
    },
    "double-equal": {
      "patterns": [
        {
          "name": "meta.double-equal.priority",
          "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*(==)\\s*([^>\\s]+)\\s*$",
          "captures": {
            "1": {
              "name": "variable.other.name.priority"
            },
            "2": {
              "name": "keyword.operator.double-equal.priority"
            },
            "3": {
              "name": "string.unquoted.value.priority"
            }
          }
        }
      ]
    },
    "single-equal": {
      "patterns": [
        {
          "name": "meta.single-equal-path.priority",
          "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_-]*)\\s*(=)\\s*(/[^\\s]+)\\s*$",
          "captures": {
            "1": {
              "name": "variable.other.name.priority"
            },
            "2": {
              "name": "keyword.operator.assignment.priority"
            },
            "3": {
              "name": "string.unquoted.path.priority"
            }
          }
        },
        {
          "name": "meta.single-equal-list.priority",
          "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_-]*)\\s*(=)\\s*([a-zA-Z_][a-zA-Z0-9_,]*)\\s*$",
          "captures": {
            "1": {
              "name": "variable.other.name.priority"
            },
            "2": {
              "name": "keyword.operator.assignment.priority"
            },
            "3": {
              "patterns": [
                {
                  "name": "constant.other.list-item.priority",
                  "match": "[a-zA-Z_][a-zA-Z0-9_]*"
                },
                {
                  "name": "punctuation.separator.comma.priority",
                  "match": ","
                }
              ]
            }
          }
        }
      ]
    }
  }
}