{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Dralee Line Split Config",
  "scopeName": "source.dxl",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#include-other-file"
    },
    {
      "include": "#block-section"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.blockconfig",
          "match": "^\\s*#.*$"
        }
      ]
    },
    "include-other-file": {
      "patterns": [
        {
          "name": "meta.include-other-file.blockconfig",
          "match": "^\\s*(@include)\\s+(.*)$",
          "captures": {
            "1":{
              "name": "keyword.control.include.blockconfig"
            },
            "2": {
              "name": "string.unquoted.path.blockconfig"
            }
          }
        }
      ]
    },
    "block-section": {
      "patterns": [
        {
          "name": "meta.block-section.blockconfig",
          "begin": "^([a-zA-Z_][a-zA-Z0-9_\\-\\.]*)\\s*$",
          "end": "^(?=\\s*$)|^(?=[a-zA-Z_][a-zA-Z0-9_\\-\\.]*\\s*$)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.section.block-name.blockconfig"
            }
          },
          "patterns": [
            {
              "include": "#key-value-pair"
            },
            {
              "include": "#continuation-line"
            },
            {
              "include": "#comments"
            }
          ]
        }
      ]
    },
    "key-value-pair": {
      "patterns": [
        {
          "name": "meta.key-value.blockconfig",
          "match": "^([a-zA-Z_][a-zA-Z0-9_-]*)(\\s*)(:)(\\s*)(.*)$",
          "captures": {
            "1": {
              "name": "variable.other.key.blockconfig"
            },
            "2": {
              "name": "whitespace.blockconfig"
            },
            "3": {
              "name": "punctuation.separator.colon.blockconfig"
            },
            "4": {
              "name": "whitespace.blockconfig"
            },
            "5": {
              "patterns": [
                {
                  "include": "#value-content"
                }
              ]
            }
          }
        }
      ]
    },
    "continuation-line": {
      "patterns": [
        {
          "name": "string.unquoted.continuation.blockconfig",
          "match": "^(?![a-zA-Z_][a-zA-Z0-9_-]*\\s*:)(?!\\s*#)(?!\\s*$)(.+)$",
          "captures": {
            "1": {
              "patterns": [
                {
                  "include": "#value-content"
                }
              ]
            }
          }
        }
      ]
    },
    "value-content": {
      "patterns": [
        {
          "include": "#double-quoted-string"
        },
        {
          "include": "#single-quoted-string"
        },
        {
          "include": "#parameter-name"
        },
        {
          "name": "string.unquoted.value.blockconfig",
          "match": ".+"
        }
      ]
    },
    "double-quoted-string": {
      "name": "string.quoted.double.blockconfig",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#parameter-name"
        },
        {
          "name": "constant.character.escape.blockconfig",
          "match": "\\\\."
        }
      ]
    },
    "single-quoted-string": {
      "name": "string.quoted.single.blockconfig",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "include": "#parameter-name"
        },
        {
          "name": "constant.character.escape.blockconfig",
          "match": "\\\\."
        }
      ]
    },
    "parameter-name": {
      "patterns": [
        {
          "name": "meta.parameter.type.variable",
          "match": "(.*)(\\$\\{.+\\})(.*)",
          "captures": {
            "1": {
              "name": "string.quoted.single.blockconfig"
            },
            "2": {
              "name": "entity.name.type.param"
            },
            "3": {
              "name": "string.quoted.single.blockconfig"
            }
          }
        }
      ]
    }
  }
}