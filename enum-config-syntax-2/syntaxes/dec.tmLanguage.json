{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Dralee Enum Config",
  "scopeName": "source.dec",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#query-block"
    },
    {
      "include": "#field-definition"
    },
    {
      "include": "#field-name-only"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.dec",
          "match": "(?<!\\$)#.*$"
        }
      ]
    },
    "query-block": {
      "patterns": [
        {
          "name": "meta.query-block.dec",
          "begin": "\\[",
          "end": "\\]",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.bracket.begin.dec"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.bracket.end.dec"
            }
          },
          "patterns": [
            {
              "include": "#table-name-only"
            }
          ]
        }
      ]
    },
    "table-name-only": {
      "patterns": [
        {
          "name": "entity.name.type.table.dec",
          "match": "(?<=\\[)([^$;\\]]+)"
        }
      ]
    },
    "string-values": {
      "patterns": [
        {
          "name": "string.quoted.single.dec",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.dec",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.double.dec",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.dec",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numeric-values": {
      "patterns": [
        {
          "name": "constant.numeric.dec",
          "match": "\\b\\d+(?:\\.\\d+)?\\b"
        }
      ]
    },
    "field-definition": {
      "patterns": [
        {
          "name": "meta.field-definition.dec",
          "match": "^([a-zA-Z_][a-zA-Z0-9_]*)\\s*==>\\s*(.*)\\s*$",
          "captures": {
            "1": {
              "name": "variable.other.field-name.dec"
            },
            "2": {
              "name": "meta.field-content.dec",
              "patterns": [
                {
                  "include": "#field-content-definition"
                }
              ]
            }
          }
        }
      ]
    },
    "field-name-only": {
      "patterns": [
        {
          "name": "variable.other.field-name.dec",          
          "match": "^[a-zA-Z_][a-zA-Z0-9_\\?]*\\s*$"
        }
      ]
    },
    "type-name-only": {
      "patterns": [
        {
          "name": "variable.other.type-name.dec",          
          "match": "(?<=\\$#?)([^$;\\]]+)"
        }
      ]
    },
    "field-content-definition": {
      "begin": "(?<===>)",
      "end": "(?=$)",
      "patterns": [
        {
          "include": "#ref-type"
        },
        {
          "include": "#complex-operators"
        },
        {
          "include": "#type-name-only"
        },
        {
          "include": "#string-values"
        },
        {
          "include": "#numeric-values"
        }
      ]
    },
    "ref-type": {
      "patterns": [
        {
          "name": "constant.other.ref-type.dec",
          "match": "\\$Ref\\$\\w+"
        }
      ]
    },
    "complex-operators": {
      "patterns": [
        {
          "name": "keyword.operator.complex.dec",
          "match": "\\$\\$\\w+\\$#"
        }
      ]
    }
  }
}