{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Dralee Export Query",
  "scopeName": "source.deq",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#query-block"
    },
    {
      "include": "#field-definition"
    },
    {
      "include": "#field-name-only"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.deq",
          "match": "#.*$"
        }
      ]
    },
    "query-block": {
      "patterns": [
        {
          "name": "meta.query-block.deq",
          "begin": "\\[",
          "end": "\\]",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.bracket.begin.deq"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.bracket.end.deq"
            }
          },
          "patterns": [
            {
              "include": "#table-with-update"
            },
            {
              "include": "#table-name-only"
            },
            {
              "include": "#condition"
            }
          ]
        }
      ]
    },
    "table-with-update": {
      "patterns": [
        {
          "name": "meta.table-with-update.deq",
          "match": "(?<=\\[)([^$;\\]]+)(\\$)([^;\\]]+)(?=;)",
          "captures": {
            "1": {
              "name": "entity.name.type.table.deq"
            },
            "2": {
              "name": "keyword.operator.separator.update.deq"
            },
            "3": {
              "name": "meta.update-condition.deq",
              "patterns": [
                {
                  "include": "#condition-content"
                }
              ]
            }
          }
        }
      ]
    },
    "table-name-only": {
      "patterns": [
        {
          "name": "entity.name.type.table.deq",
          "match": "(?<=\\[)([^$;\\]]+)"
        }
      ]
    },
    "condition": {
      "patterns": [
        {
          "name": "meta.query-condition.deq",
          "begin": "(?<=;)",
          "end": "(?=\\])",
          "patterns": [
            {
              "include": "#condition-content"
            }
          ]
        }
      ]
    },
    "condition-content": {
      "patterns": [
        {
          "include": "#logical-operators"
        },
        {
          "include": "#comparison-operators"
        },
        {
          "include": "#backtick-field-names"
        },
        {
          "include": "#condition-field-names"
        },
        {
          "include": "#string-values"
        },
        {
          "include": "#numeric-values"
        }
      ]
    },
    "logical-operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.deq",
          "match": "\\b(AND|OR|NOT|ORDER|BY|ASC|DESC|LIMIT|OFFSET|GROUP)\\b"
        }
      ]
    },
    "comparison-operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.deq",
          "match": "(=|!=|<>|>|<|>=|<=)"
        }
      ]
    },
    "backtick-field-names": {
      "patterns": [
        {
          "name": "variable.other.field.quoted.deq",
          "begin": "`",
          "end": "`",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.field.begin.deq"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.field.end.deq"
            }
          },
          "patterns": [
            {
              "name": "variable.other.field.quoted.content.deq",
              "match": "[^`]+"
            }
          ]
        }
      ]
    },
    "condition-field-names": {
      "patterns": [
        {
          "name": "variable.other.field.deq",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*(?:=|!=|<>|>|<|>=|<=))"
        }
      ]
    },
    "string-values": {
      "patterns": [
        {
          "name": "string.quoted.single.deq",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.deq",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.double.deq",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.deq",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numeric-values": {
      "patterns": [
        {
          "name": "constant.numeric.deq",
          "match": "\\b\\d+(?:\\.\\d+)?\\b"
        }
      ]
    },
    "field-definition": {
      "patterns": [
        {
          "name": "meta.field-definition.deq",
          "match": "^([a-zA-Z_][a-zA-Z0-9_]*)\\s*,\\s*(\\w+)\\s*$",
          "captures": {
            "1": {
              "name": "variable.other.field-name.deq"
            },
            "2": {
              "name": "storage.type.field-type.deq"
            }
          }
        }
      ]
    },
    "field-name-only": {
      "patterns": [
        {
          "name": "variable.other.field-name.deq",
          "match": "^[a-zA-Z_][a-zA-Z0-9_\\?]*\\s*$"
        }
      ]
    }
  }
}