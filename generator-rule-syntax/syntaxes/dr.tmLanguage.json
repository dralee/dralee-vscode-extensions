{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Dralee Enum Config",
  "scopeName": "source.dr",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#file-config-field"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.configenum",
          "match": "^\\s*#.*$"
        }
      ]
    },
    "file-config-field": {
      "patterns": [
        {
          "name": "meta.global-work.configenum",
          "begin": "^([a-zA-Z_\\{\\}\\$\\%\\@\\.\\/:\\*\\?][a-zA-Z0-9_\\{\\}\\$\\%\\@\\.\\/:\\*\\?]*)(==>)",
          "end": "$",
          "beginCaptures": {
            "1": {
              "name": "variable.other.file-name.configenum"
            },
            "2": {
              "name": "keyword.operator.assignment.configenum"
            }
          },
          "patterns": [
            {
              "include": "#dollor-symbol"
            },
            {
              "include": "#target-path"
            },
            {
              "include": "#condition-expression"
            },
            {
              "include": "#param-name"
            }
          ]
        }
      ]
    },
    "dollor-symbol":{
      "patterns": [
        {
          "name": "variable.other.field-name.configenum",
          "match": "\\$"
        },
        {
          "name": "entity.name.field-name.configenum",
          "match": "\\$\\{model\\}"
        },
        {
          "name": "entity.name.field-name.configenum",
          "match": "@\\{model\\}@"
        }
      ]
    },
    "param-name": {
      "patterns": [
        {
          "name": "meta.param-name.configenum",
          "match": "\\$\\{([a-zA-Z_][a-zA-Z0-9_]*)\\}",
          "captures": {
            "1": {
              "name": "entity.name.section.param-name"
            },
            "2": {
              "name": "entity.name.type.param-name"
            }
          }
        }
      ]
    },
    "target-path": {
      "patterns": [
        {
          "name": "meta.target-path.configenum",
          "match": "([a-zA-Z_\\{\\}\\$\\%\\@\\.\\/][a-zA-Z0-9_\\{\\}\\$\\%\\@\\.\\/]*)(,)?([a-zA-Z_][a-zA-Z0-9_]*)(\\.)?([a-zA-Z_][a-zA-Z0-9_]*)?",
          "captures": {
            "1": {
              "name": "entity.name.target-path.configenum",
              "patterns": [
                {
                  "include": "#file-param-name"
                }
              ]
            },
            "2": {
              "name": "punctuation.separator.target-path.configenum"
            },
            "3": {
              "name": "variable.other.condition.configenum"
            },
            "4": {
              "name": "punctuation.separator.field-name.configenum"
            },
            "5": {
              "name": "entity.name.field-name.configenum"
            },
            "6": {
              "patterns": [
                {
                  "include": "#inline-enum-description"
                }
              ]
            }
          }
        }
      ]
    },
    "file-param-name":{
      "patterns": [
        {
          "include": "#only-file-name"
        },
        {
          "include": "#file-name-with-path"
        },
        {
          "include": "#param-name"
        }
      ]
    },
    "only-file-name": {
      "patterns": [
        {
          "name": "meta.only-file-name.configenum",
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)(\\.)?([a-zA-Z_][a-zA-Z0-9_]*)?",
          "captures": {
            "1": {
              "name": "entity.name.file-name.configenum"
            },
            "2": {
              "name": "punctuation.separator.file-name.configenum"
            },
            "3": {
              "name": "entity.name.file-name.configenum"
            }
          }
        }
      ]
    },
    "inline-enum-description": {
      "patterns": [
        {
          "name": "meta.inline-enum.configenum",
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "string.unquoted.condition-param.configenum"
            }
          }
        },
        {
          "name": "punctuation.separator.item.configenum",
          "match": "&&"
        }
      ]
    }
  }
}